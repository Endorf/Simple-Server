global:
  scrape_interval:     15s

  external_labels:
    monitor: 'codelab-monitor'

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['192.168.10.10:9093'] 

rule_files:
  - rules/alert.yml

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['192.168.10.10:9090']
  
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['192.168.10.10:9100']

  - job_name: 'alertmanager'
    scrape_interval: 5s
    static_configs:
      - targets: ['192.168.10.10:9093'] 
